datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  tasks     Task[]
  role      Role

  @@map("users")
}

model Task {
  id             String           @id @default(cuid())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  title          String
  content        String?
  deadline       DateTime
  cycleDays      Int
  user           User?            @relation(fields: [userId], references: [id])
  userId         String?
  TaskCompletion TaskCompletion[]

  @@map("tasks")
}

model TaskCompletion {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  task      Task?    @relation(fields: [taskId], references: [id])
  taskId    String?

  @@map("task_completion")
}

enum Role {
  ADMIN
  USER
}
