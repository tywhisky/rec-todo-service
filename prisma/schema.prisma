datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  firstname String?
  lastname  String?
  tasks     Task[]
  role      Role

  @@map("users")
}

model Task {
  id              String    @id @default(cuid())
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  title           String
  content         String?
  cycleDays       Int
  lastCompletedAt DateTime?

  previousId   String? @unique
  previousTask Task?   @relation("PreviousTask", fields: [previousId], references: [id])
  nextTask     Task?   @relation("PreviousTask")

  user         User?   @relation(fields: [userId], references: [id])
  userId       String?

  @@map("tasks")
}

enum Role {
  ADMIN
  USER
}
